<% layout("/layouts/boilerplate")%>
<body>
    <h3>Create A New Listing</h3>
 <form action="/listings" method="POST">
    <input type="text" name="listing[title]" placeholder="Enter property title">
    <br>  <br>

    <textarea name="listing[description]" placeholder="Enter property description"></textarea>
    <br>  <br>

    <input type="text" name="listing[image]" placeholder="Enter image URL">
    <br>  <br>

    <input type="number" name="listing[price]" placeholder="Enter property price">
    <br>  <br>

    <input type="text" name="listing[location]" placeholder="Enter property location">
    <br>  <br>

    <input type="text" name="listing[country]" placeholder="Enter country">
    <br>  <br>

    <button type="submit">Add Listing</button>
</form>

    
</body>